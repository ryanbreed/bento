{
  "builders": [
    {
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "centos-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "packer-{{user `template`}}-vmware",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{ user `template` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      }
    },
    {
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "packer-{{user `template`}}-qemu",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "{{ user `template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "BENTO_NAME={{ user `name`}}",
        "BENTO_BOX={{ user `box_basename`}}",
        "BENTO_TEMPLATE={{ user `template`}}",
        "BENTO_VERSION={{ user `version`}}",
        "BENTO_TIMESTAMP={{ user `build_timestamp`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/common/sshd.sh",
        "scripts/common/metadata.sh",
        "scripts/centos/networking.sh",
        "scripts/common/vagrant.sh",
        "scripts/centos/cleanup.sh",
        "scripts/centos/grubfix.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    },
    {
      "type": "ansible",
      "playbook_file":"./ansible/audit_stubs.yml"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/{{user `box_basename`}}.{{.Provider}}-{{user `version`}}.box",
      "vagrantfile_template":"vagrantfile_templates/centos-7.3.rb"
    },
    {
      "type":"compress",
      "output":"/data/export/images/packer_{{.BuilderType}}-{{user `box_basename`}}.tar.gz"
    }
  ],
  "variables": {
    "box_basename": "centos-7.3",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "2",
    "disk_size": "10240",
    "git_revision": "0.1.0",
    "headless": "true",
    "http_proxy": "{{ env `http_proxy`}}",
    "https_proxy": "{{ env `https_proxy`}}",
    "iso_checksum": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1611.iso",
    "ks_path": "breed-centos-7.3/ks.cfg",
    "memory": "1024",
    "metadata": "floppy/dummy_metadata.json",
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "7.3.1611/isos/x86_64",
    "name": "centos-7.3",
    "no_proxy": "{{env `no_proxy`}}",
    "template": "breed-centos-7.3-x86_64",
    "version": "0.2.1"
  }
}
